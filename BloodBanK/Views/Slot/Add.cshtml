@model BloodBanK.Models.Slot

@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

<h4>Slot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group">
                <label asp-for="SlotTime" class="control-label"></label>
                <input asp-for="SlotTime" class="form-control" />
                <span asp-validation-for="SlotTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HospitalName" class="control-label"></label>
                @Html.DropDownListFor(model=>model.HospitalName,new SelectList(ViewBag.list),"----Select Your Hospital----",htmlAttributes:new{@class="form-control"})
            </div>
            <div class="form-group mt-3 offset-4">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {  
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script type="text/javascript">
     new tempusDominus.TempusDominus(document.getElementById('datetimepicker1'), {
      localization: {
       	locale: 'en-GB'
	},
});

    </script>
}
